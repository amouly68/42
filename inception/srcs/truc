version: '3.5'

services:
  mariadb:
    build: requirements/mariadb
    image: mariadb
    container_name: mariadb
    restart: unless-stopped
    env_file: 
      - .env
    volumes: 
      - dbdata:/var/lib/mysql
    networks:
      - app-network


  wordpress: 
    depends_on: 
      - mariadb
    build: requirements/wordpress
    image: wordpress
    container_name: wordpress
    restart: unless-stopped
    env_file: 
      - .env
    environment:
      - MYSQL_DATABASE=$MYSQL_DATABASE
      - MYSQL_USER=$MYSQL_USER
      - MYSQL_PASSWORD=$MYSQL_PASSWORD
      - MYSQL_ROOT_PASSWORD=$MYSQL_ROOT_PASSWORD
    volumes:
      - wordpress:/var/www/html
    networks:
      - app-network


  nginx:
    depends_on:
      - wordpress
    build: requirements/nginx/
    image: nginx
    env_file :
      - .env
    container_name: nginx
    restart: unless-stopped
    ports:
      - "443:443"
      - "80:80"
    volumes:
      - wordpress:/var/www/html
    networks:
      - app-network

  adminer:
    image: adminer:latest
    container_name: adminer
    restart: always
    ports:
      - 7777:8080
    networks:
      - app-network

  portainer:
    image: portainer/portainer-ce:latest
    ports:
      - 9443:9443
    networks:
      - app-network

volumes:
  wordpress:
    driver: local
    driver_opts:
      type: none
      o: bind
      # device: /Users/antoine/Documents/Data/wordpress
      device: /home/amouly/data/wp
      # device: /local-home/amouly/goinfre/data/wp5
  dbdata:
    driver: local
    driver_opts:
      type: none
      o: bind
      # device: /Users/antoine/Documents/Data/mariadb
      device: /home/amouly/data/db
      # device: /local-home/amouly/goinfre/data/db5    

networks:
  app-network:
    driver: bridge
